# Rails Credentials Template
# Copy this structure when editing credentials with: bin/rails credentials:edit
#
# Production credentials: bin/rails credentials:edit --environment production

# GitHub API token for repo scraping
github:
  token: ghp_your_token_here

# Sentry error tracking
sentry:
  dsn: https://your-dsn@sentry.io/project
  traces_sample_rate: 0.1

# Redis URL (optional - falls back to solid_cache_store)
redis:
  url: redis://localhost:6379/0

# JWT secret for API authentication
jwt:
  secret_key: generate-with-rails-secret

# SMTP for sending emails (optional)
# smtp:
#   user_name: your_username
#   password: your_password
