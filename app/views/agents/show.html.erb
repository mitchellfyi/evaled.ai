<% content_for :title, "#{@agent.name} - Evald Score #{@agent.decayed_score&.round || 'N/A'} | Evald.ai" %>
<% content_for :description, @agent.description || "View the trust score and evaluation details for #{@agent.name} on Evald.ai" %>

<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="bg-white rounded-xl p-8 shadow mb-8">
    <div class="flex justify-between items-start">
      <div>
        <div class="flex items-center space-x-3 mb-2">
          <h1 class="text-3xl font-bold text-gray-900"><%= @agent.name %></h1>
          <% if @agent.verified? %>
            <span class="flex items-center text-green-600 text-sm">
              <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Verified
            </span>
          <% end %>
        </div>
        
        <% if @agent.builder_name.present? %>
          <p class="text-gray-500 mb-2">
            by 
            <% if @agent.builder_url.present? %>
              <a href="<%= @agent.builder_url %>" class="text-indigo-600 hover:text-indigo-700" target="_blank"><%= @agent.builder_name %></a>
            <% else %>
              <%= @agent.builder_name %>
            <% end %>
          </p>
        <% end %>
        
        <% if @agent.description.present? %>
          <p class="text-gray-600 mb-4"><%= @agent.description %></p>
        <% end %>
        
        <div class="flex space-x-4">
          <% if @agent.repo_url.present? %>
            <a href="<%= @agent.repo_url %>" class="text-gray-500 hover:text-gray-700 flex items-center" target="_blank">
              <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/></svg>
              GitHub
            </a>
          <% end %>
          <% if @agent.website_url.present? %>
            <a href="<%= @agent.website_url %>" class="text-gray-500 hover:text-gray-700 flex items-center" target="_blank">
              <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/></svg>
              Website
            </a>
          <% end %>
        </div>
      </div>
      
      <!-- Score Card -->
      <div class="text-center bg-gray-50 rounded-xl p-6 min-w-[160px]">
        <div class="text-5xl font-bold <%= score_color_class(@agent.decayed_score) %>">
          <%= @agent.decayed_score&.round || 'N/A' %>
        </div>
        <div class="text-gray-500 text-sm mt-1">Evald Score</div>
        <% confidence = @agent.confidence_level %>
        <div class="mt-2" title="<%= confidence_tooltip(confidence) %>">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= confidence_badge_class(confidence) %>">
            <%= confidence_label(confidence) %>
          </span>
        </div>
        <% if @agent.last_verified_at.present? %>
          <div class="text-gray-400 text-xs mt-2">
            Verified <%= time_ago_in_words(@agent.last_verified_at) %> ago
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Score Breakdown -->
  <div class="grid md:grid-cols-2 gap-8 mb-8">
    <!-- Tier 0 -->
    <div class="bg-white rounded-xl p-6 shadow">
      <div class="flex items-center mb-4">
        <span class="bg-indigo-100 text-indigo-700 px-3 py-1 rounded-full text-sm font-medium">Tier 0</span>
        <span class="ml-2 text-gray-500 text-sm">Passive Signals</span>
      </div>
      
      <div class="space-y-4">
        <% @agent.tier0_summary.each do |signal, score| %>
          <div>
            <div class="flex justify-between text-sm mb-1">
              <span class="text-gray-600"><%= signal.to_s.titleize %></span>
              <span class="font-medium <%= score_color_class(score) %>"><%= score&.round(1) %></span>
            </div>
            <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
              <div class="h-full <%= score_bar_class(score) %> rounded-full" style="width: <%= score || 0 %>%"></div>
            </div>
          </div>
        <% end %>
        
        <% if @agent.tier0_summary.empty? %>
          <p class="text-gray-400 text-sm">No Tier 0 evaluation yet</p>
        <% end %>
      </div>
    </div>

    <!-- Tier 1 -->
    <div class="bg-white rounded-xl p-6 shadow">
      <div class="flex items-center mb-4">
        <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm font-medium">Tier 1</span>
        <span class="ml-2 text-gray-500 text-sm">Task Completion</span>
      </div>
      
      <div class="space-y-4">
        <% @agent.tier1_summary.each do |metric, value| %>
          <div>
            <div class="flex justify-between text-sm mb-1">
              <span class="text-gray-600"><%= metric.to_s.titleize %></span>
              <span class="font-medium <%= score_color_class((value || 0) * 100) %>"><%= ((value || 0) * 100).round(1) %>%</span>
            </div>
            <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
              <div class="h-full <%= score_bar_class((value || 0) * 100) %> rounded-full" style="width: <%= (value || 0) * 100 %>%"></div>
            </div>
          </div>
        <% end %>
        
        <% if @agent.tier1_summary.empty? %>
          <p class="text-gray-400 text-sm">No Tier 1 evaluation yet</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Badge Embed -->
  <div class="bg-white rounded-xl p-6 shadow mb-8">
    <h2 class="text-lg font-bold text-gray-900 mb-4">Add Badge to Your README</h2>
    <div class="flex items-center space-x-4 mb-4">
      <img src="<%= badge_agent_path(@agent, format: :svg) %>" alt="Evald Score" class="h-6">
    </div>
    <div class="bg-gray-50 rounded-lg p-4">
      <code class="text-sm text-gray-700 break-all">[![Evald Score](https://evald.ai<%= badge_agent_path(@agent, format: :svg) %>)](https://evald.ai<%= agent_path(@agent) %>)</code>
    </div>
  </div>

  <!-- Evaluation History -->
  <% if @evaluations.present? %>
  <div class="bg-white rounded-xl p-6 shadow">
    <h2 class="text-lg font-bold text-gray-900 mb-4">Evaluation History</h2>
    <div class="space-y-3">
      <% @evaluations.each do |eval| %>
        <div class="flex justify-between items-center py-2 border-b border-gray-100 last:border-0">
          <div class="flex items-center space-x-3">
            <span class="px-2 py-1 rounded text-xs font-medium <%= eval.tier == 'tier0' ? 'bg-indigo-100 text-indigo-700' : 'bg-green-100 text-green-700' %>">
              <%= eval.tier.titleize %>
            </span>
            <span class="text-gray-600"><%= eval.version || 'N/A' %></span>
          </div>
          <div class="flex items-center space-x-4">
            <span class="font-medium <%= score_color_class(eval.score) %>"><%= eval.score&.round(1) %></span>
            <span class="text-gray-400 text-sm"><%= eval.completed_at&.strftime('%b %d, %Y') %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
