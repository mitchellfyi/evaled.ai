<%= link_to agent_path(agent), class: "block bg-white rounded-xl p-6 shadow hover:shadow-lg transition" do %>
  <div class="flex justify-between items-start mb-4">
    <div>
      <h3 class="text-lg font-bold text-gray-900"><%= agent.name %></h3>
      <% if agent.builder_name.present? %>
        <p class="text-sm text-gray-500">by <%= agent.builder_name %></p>
      <% end %>
    </div>
    <div class="text-right">
      <div class="text-2xl font-bold <%= score_color_class(agent.decayed_score) %>">
        <%= agent.decayed_score&.round || 'N/A' %>
      </div>
      <div class="text-xs text-gray-400">Evald Score</div>
      <span class="inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium mt-1 <%= confidence_badge_class(agent.confidence_level) %>" title="<%= confidence_tooltip(agent.confidence_level) %>">
        <%= confidence_label(agent.confidence_level) %>
      </span>
    </div>
  </div>
  
  <% if agent.description.present? %>
    <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= agent.description %></p>
  <% end %>
  
  <div class="flex justify-between items-center text-sm">
    <% if agent.category.present? %>
      <span class="px-2 py-1 bg-gray-100 text-gray-600 rounded"><%= agent.category.capitalize %></span>
    <% end %>
    
    <% if agent.last_verified_at.present? %>
      <span class="text-gray-400">Verified <%= time_ago_in_words(agent.last_verified_at) %> ago</span>
    <% end %>
  </div>
  
  <% if agent.verified? %>
    <div class="mt-3 flex items-center text-sm text-green-600">
      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      Verified Builder
    </div>
  <% end %>
<% end %>
