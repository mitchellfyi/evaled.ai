<% content_for :title do %>
  Compare: <%= @agents.map(&:name).join(' vs ') %> | Evald.ai
<% end %>

<% content_for :description do %>
  Compare AI agent trust scores: <%= @agents.map { |a| "#{a.name} (#{number_with_precision(a.decayed_score, precision: 1) || 'N/A'})" }.join(' vs ') %>. Find the most trustworthy agent for your needs.
<% end %>

<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
    <h1 class="text-3xl font-bold">Compare Agents</h1>
    
    <% if @agents.size > 1 %>
      <div class="flex items-center gap-2 mt-4 sm:mt-0" data-controller="share">
        <button 
          data-action="click->share#copyLink"
          class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition-colors"
          title="Copy link to clipboard">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <span data-share-target="buttonText">Copy Link</span>
        </button>
        
        <a href="https://twitter.com/intent/tweet?url=<%= ERB::Util.url_encode(request.original_url) %>&text=<%= ERB::Util.url_encode("Comparing AI agents: #{@agents.map(&:name).join(' vs ')} on Evald.ai") %>"
           target="_blank"
           rel="noopener noreferrer"
           class="inline-flex items-center justify-center w-10 h-10 bg-gray-100 hover:bg-[#1DA1F2] hover:text-white text-gray-700 rounded-lg transition-colors"
           title="Share on Twitter">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        
        <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= ERB::Util.url_encode(request.original_url) %>"
           target="_blank"
           rel="noopener noreferrer"
           class="inline-flex items-center justify-center w-10 h-10 bg-gray-100 hover:bg-[#0A66C2] hover:text-white text-gray-700 rounded-lg transition-colors"
           title="Share on LinkedIn">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>
    <% end %>
  </div>

  <% if @agents.empty? %>
    <p class="text-gray-600">No agents found to compare. Please provide valid agent slugs.</p>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-<%= [@agents.size, 5].min %> gap-6">
      <% @agents.each do |agent| %>
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold mb-2"><%= agent.name %></h2>
          <p class="text-gray-600 mb-4"><%= agent.category %></p>
          
          <div class="mb-4">
            <span class="text-3xl font-bold text-<%= agent.badge_color %>">
              <%= number_with_precision(agent.decayed_score, precision: 1) || 'N/A' %>
            </span>
            <span class="text-gray-500">/100</span>
          </div>

          <div class="space-y-2 text-sm">
            <% if agent.tier0_summary.present? %>
              <div>
                <span class="font-medium">Tier 0:</span>
                <span class="text-gray-600"><%= agent.tier0_summary.values.compact.size %> signals</span>
              </div>
            <% end %>
            <% if agent.tier1_summary.present? %>
              <div>
                <span class="font-medium">Tier 1:</span>
                <span class="text-gray-600"><%= agent.tier1_summary.values.compact.size %> metrics</span>
              </div>
            <% end %>
            <% if agent.last_verified_at %>
              <div>
                <span class="font-medium">Last verified:</span>
                <span class="text-gray-600"><%= time_ago_in_words(agent.last_verified_at) %> ago</span>
              </div>
            <% end %>
          </div>

          <%= link_to "View Profile", agent_path(agent), class: "mt-4 inline-block text-blue-600 hover:underline" %>
        </div>
      <% end %>
    </div>

    <% if @agents.size > 1 %>
      <div class="mt-8 bg-blue-50 rounded-lg p-6">
        <h3 class="text-lg font-semibold mb-2">Recommendation</h3>
        <% best_agent = @agents.max_by { |a| a.decayed_score || 0 } %>
        <p class="text-gray-700">
          Based on Evald scores, <strong><%= best_agent.name %></strong> has the highest score 
          (<%= number_with_precision(best_agent.decayed_score, precision: 1) %>).
        </p>
      </div>
    <% end %>
  <% end %>
</div>
