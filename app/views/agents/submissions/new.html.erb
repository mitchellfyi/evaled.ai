<% content_for :title, "Submit an Agent | Evald.ai" %>
<% content_for :description, "Suggest an AI agent for evaluation on Evald.ai - the trust score platform for AI agents." %>

<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-4">Submit an Agent for Evaluation</h1>

  <p class="text-lg text-gray-600 mb-8">
    Know of an AI agent that should be on Evald? Submit it here and we'll review it for inclusion.
  </p>

  <% if flash[:notice] %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
      <div class="flex">
        <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <p class="ml-3 text-sm text-green-700"><%= flash[:notice] %></p>
      </div>
    </div>
  <% end %>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <%= form_with model: @pending_agent, url: agent_submissions_path, local: true, class: "space-y-6" do |f| %>
      <% if @pending_agent.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">There were errors with your submission</h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @pending_agent.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= f.label :github_url, "GitHub Repository URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.url_field :github_url,
            placeholder: "https://github.com/owner/repo",
            required: true,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 #{@pending_agent.errors[:github_url].any? ? 'border-red-300' : ''}" %>
        <p class="mt-1 text-sm text-gray-500">The full URL to the agent's GitHub repository</p>
      </div>

      <div>
        <%= f.label :description, "Why should we evaluate this agent? (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :description,
            rows: 3,
            placeholder: "Tell us what makes this agent interesting or useful...",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="pt-4">
        <%= f.submit "Submit Agent", class: "w-full px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <div class="mt-8 bg-gray-50 rounded-lg p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-3">What we look for</h2>
    <ul class="space-y-2 text-gray-600">
      <li class="flex items-start">
        <svg class="h-5 w-5 text-indigo-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span><strong>AI agents</strong> - tools that perform autonomous tasks using AI/LLMs</span>
      </li>
      <li class="flex items-start">
        <svg class="h-5 w-5 text-indigo-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span><strong>Open source</strong> - publicly available on GitHub</span>
      </li>
      <li class="flex items-start">
        <svg class="h-5 w-5 text-indigo-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span><strong>Active development</strong> - maintained and recently updated</span>
      </li>
    </ul>
    <p class="mt-4 text-sm text-gray-500">
      We manually review all submissions. Not all agents will be added - we prioritize agents with significant adoption or unique capabilities.
    </p>
  </div>
</div>
