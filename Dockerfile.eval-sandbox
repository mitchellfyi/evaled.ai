# Dockerfile for evald.ai Sandbox Execution Environment
# This container provides an isolated environment for evaluating code submissions
# across multiple languages with strict security constraints.

FROM ubuntu:22.04

LABEL maintainer="evald.ai"
LABEL description="Sandboxed code evaluation environment"
LABEL evald.component="sandbox"

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install base dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    gnupg \
    && rm -rf /var/lib/apt/lists/*

# Install Python 3
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 \
    python3-pip \
    python3-venv \
    && ln -s /usr/bin/python3 /usr/bin/python \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 20.x LTS
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y --no-install-recommends nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install Ruby
RUN apt-get update && apt-get install -y --no-install-recommends \
    ruby-full \
    && rm -rf /var/lib/apt/lists/*

# Install common testing frameworks
RUN pip3 install --no-cache-dir pytest \
    && npm install -g --no-fund --no-audit mocha chai jest \
    && gem install --no-document minitest rspec

# Create non-root user for security
RUN groupadd --gid 1000 evaluser \
    && useradd --uid 1000 --gid evaluser --shell /bin/bash --create-home evaluser

# Set up working directory
WORKDIR /eval
RUN chown evaluser:evaluser /eval

# Switch to non-root user
USER evaluser

# Set environment variables
ENV HOME=/home/evaluser
ENV PATH="/home/evaluser/.local/bin:${PATH}"
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV NODE_ENV=production

# Default command - container will sleep and wait for exec commands
CMD ["sleep", "infinity"]
